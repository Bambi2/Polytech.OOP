    cin >> cole.number >> cole.salary >> curSign >> cole.date.day >> dateSign >> cole.date.month >> dateSign >> cole.date.year >> cole.pos_reply;
    steve.setPosition(cole.pos_reply);

    
    
    


    cout << "Steve: " << steve.number << " " << steve.salary << curSign << " " << steve.date.day << dateSign << steve.date.month << dateSign << steve.date.year << " " << steve.getPosition() << endl;
    cout << "Tyler: " << tyler.number << " " << tyler.salary << curSign << " " << tyler.date.day << dateSign << tyler.date.month << dateSign << tyler.date.year << " " << tyler.getPosition() << endl;
    cout << "Cole: " << cole.number << " " << cole.salary << curSign << " " << cole.date.day << dateSign << cole.date.month << dateSign << cole.date.year << " " << cole.getPosition() << endl;


    

